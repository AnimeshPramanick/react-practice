    <h1><%=email%></h1>
    <form action="" method="post">
      <input
        type="password"
        placeholder="new password"
        name="password"
        id="password"
      /><br />
      <input
        type="password"
        placeholder="confirm password"
        name="confirm-password"
        id="confirm-password"
      /><br />
      <input type="submit" value="submit" />
    </form>
  </body>
</html>
